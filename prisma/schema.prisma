generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Horse {
  id           String   @id @default(cuid())
  name         String
  color        String? // зүс
  number       String? // дугаар
  location     String?
  ageCategory  String? // насны ангилал
  age          Int? // нас
  status       String? // төлөв
  province     String? // аймаг
  district     String? // сум
  chipNumber   String? // чипний дугаар
  description  String? // тайлбар
  share        Float? // Boolean биш Float төрөл ашиглах
  brand        String? // им тамга
  registeredAt DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Owner        Owner?   @relation(fields: [ownerId], references: [id])
  ownerId      String?
}

model Owner {
  id        String   @id @default(cuid())
  name      String
  phone     String?
  address   String?
  horses    Horse[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
